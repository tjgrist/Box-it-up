@model BoxService.Models.ApplicationUser

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            User Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Dues:
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.Dues)
        </dd>
        <dt>
            Your Box:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserBox)
        </dd>

        <dt>
            Likes Sweet:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Likes)
        </dd>

        <dt>
            Likes Savory:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dislikes)
        </dd>
    </dl>
</div>
<div>@Html.ActionLink("Change your box", "ChangeBox", "Users")</div>
<div>
    @Html.ActionLink("Box Suggestions", "SuggestBox", "Users")
</div>

@if (ViewBag.isAdmin == "Yes")
{
    <p>
        @Html.ActionLink("Admin Profile", "Admin", "Users")
    </p>
}
